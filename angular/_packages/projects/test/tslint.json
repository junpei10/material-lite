{
  "extends": "../../tslint.json",
  "rules": {
    "no-inferrable-types": false,
    "no-bitwise": false,
    "directive-selector": [
      true,
      "attribute",
      "lib",
      "ml",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "lib",
      "ml",
      "kebab-case"
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        // Added
        "allow-pascal-case",
        // Added
        "allow-leading-underscore"
      ]
    }
  }
}
